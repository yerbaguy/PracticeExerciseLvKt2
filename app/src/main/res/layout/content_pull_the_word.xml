<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_pull_the_word"
        tools:context=".PullTheWord">


    <Button
            android:id="@+id/buttonPullTheWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Pull The Word"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/textPullTheWord"
            android:layout_marginRight="15dip"
            android:typeface="serif"
            android:layout_width="235dp"
            android:layout_height="46dp"
            android:text="lkjasdf"
            android:textColor="#030900"
            app:layout_constraintEnd_toEndOf="parent"/>


    <Button
            android:id="@+id/btnSupport"
            android:text="Support"
            android:layout_width="167dp"
            android:layout_height="49dp"
            app:layout_constraintBottom_toTopOf="@+id/textEngWord"
            tools:layout_editor_absoluteX="0dp" android:layout_marginBottom="92dp"/>



    <TextView
            android:text="TextViewSupport"
            android:layout_width="353dp"
            android:layout_height="37dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSupport"
            android:id="@+id/textView2"/>




    <EditText
            android:id="@+id/textEngWord"
            android:layout_width="372dp"
            android:layout_height="54dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="352dp"
            app:layout_constraintBottom_toBottomOf="parent"/>



    <Button

            android:id="@+id/btnSubmit"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="Submit"
            app:layout_constraintTop_toBottomOf="@+id/textEngWord"/>



</android.support.constraint.ConstraintLayout>